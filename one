  <!-- –ö–Ω–æ–ø–∫–∞ "–ü–æ–≤–µ—Ä–Ω—É—Ç–∏—Å—è –Ω–∞–≤–µ—Ä—Ö" -->
  <button class="back-to-top" onclick="scrollToTop()">‚Üë</button>

  <script>
    function toggleAccordion(element) {
      element.classList.toggle('active');
    }

    // –î–æ–¥–∞—î–º–æ –æ–±—Ä–æ–±–∫—É –ø–æ–¥—ñ–π –¥–ª—è –∞–∫–æ—Ä–¥–µ–æ–Ω—ñ–≤ (click —ñ touchstart)
    document.querySelectorAll('.accordion').forEach(function(acc) {
      acc.addEventListener('click', function(e) {
        toggleAccordion(this);
      });
      acc.addEventListener('touchstart', function(e) {
        toggleAccordion(this);
        e.preventDefault(); // –∑–∞–ø–æ–±—ñ–≥–∞—î–º–æ –ø–æ–¥–≤—ñ–π–Ω—ñ–π –∞–∫—Ç–∏–≤–∞—Ü—ñ—ó
      });
    });

    // –§—É–Ω–∫—Ü—ñ—è –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è –¥–æ –≤–µ—Ä—Ö—É
    function scrollToTop() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // –ü–æ–∫–∞–∑/–ø—Ä–∏—Ö–æ–≤—É–≤–∞–Ω–Ω—è –∫–Ω–æ–ø–∫–∏ "–ü–æ–≤–µ—Ä–Ω—É—Ç–∏—Å—è –Ω–∞–≤–µ—Ä—Ö" –ø—Ä–∏ —Å–∫—Ä–æ–ª—ñ
    window.addEventListener('scroll', function() {
      const btn = document.querySelector('.back-to-top');
      if (window.pageYOffset > 300) {
        btn.classList.add('show');
      } else {
        btn.classList.remove('show');
      }
    });
  </script>
